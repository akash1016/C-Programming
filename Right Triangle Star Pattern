#include <stdio.h>

int main()
{
    printf("Patterns\n ");
    int n,m=0;
    printf("Enter nomber of rows = "); /* asking user for input*/
    scanf("%d",&n);
    for(int i=1; i<=n; i++){          /* Creating loop for adding new line*/
        for(int j=1; j<=i; j++){      /* Creating loop for adding asteric to line*/
            printf("*");
        }
       
        printf("\n");
        m++;
    }

    return 0;
}
